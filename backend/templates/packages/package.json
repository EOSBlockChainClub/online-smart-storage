{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "server": "PORT=8889 ./node_modules/pm2/bin/pm2 start index.js --env production -i 1 --name server ",
    "worker": "./node_modules/pm2/bin/pm2 start jobWorker.js --env production -i 0 --name worker ",
    "start": "NODE_ENV=production npm run server;npm run worker;npm run sleep ",
    "stop": "./node_modules/pm2/bin/pm2 kill",
    "sleep": "while(true);do sleep 10s;done",
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "npm run build:server;npm run build:worker",
    "build:worker": "cd jobworker && npm start",
    "build:server": "babel src -s -D -d dist",
    "postbuild": "cp -Ra jobworker/build/* dist/",
    "lint": "standard | snazzy"
  },
  "dependencies": {
    "cors": "2.8.4",
    "demux": "2.0.0",
    "demux-eos": "2.0.0",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "go-ipfs-dep": "0.4.18",
    "hypernova": "git+https://github.com/prod-usertoken/hypernova.git",
    "hypernova-aphrodite": "2.1.1",
    "hypernova-client": "1.1.0",
    "hypernova-react": "2.1.0",
    "ipfs": "0.33.1",
    "ipfs-api": "26.1.2",
    "ipfsd-ctl": "0.40.0",
    "mongodb": "3.1.1",
    "mongoose": "5.2.3",
    "orbit-db": "0.19.9",
    "pm2": "^3.2.2",
    "socket.io": "2.1.1",
    "uuid": "^3.3.2"
  }
}
